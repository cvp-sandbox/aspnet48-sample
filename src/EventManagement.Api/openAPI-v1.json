  "components": {
    "schemas": {
      "CreateEventRequest": {
        "required": [
          "name",
          "description",
          "eventDate",
          "location",
          "maxAttendees"
        ],
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "eventDate": {
