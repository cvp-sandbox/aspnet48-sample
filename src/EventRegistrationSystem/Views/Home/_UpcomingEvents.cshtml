@model IEnumerable<EventRegistrationSystem.Models.Registration>

<div class="container mb-5">
    <div class="card">
        <div class="card-header bg-light">
            <h4 class="mb-0">Your Upcoming Events</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Date</th>
                            <th>Location</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var registration in Model)
                            {
                                <tr>
                                    <td>@registration.Event.Name</td>
                                    <td>@registration.Event.EventDate.ToString("MMMM d, yyyy")</td>
                                    <td>@registration.Event.Location</td>
                                    <td>
                                        @Html.ActionLink("View", "Details", "Event", new { id = registration.EventId }, new { @class = "btn btn-sm btn-outline-primary" })
                                        @Html.ActionLink("Cancel", "CancelRegistration", "Event", new { id = registration.RegistrationId }, new { @class = "btn btn-sm btn-outline-danger" })
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center">You have no upcoming events in the next 7 days.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
